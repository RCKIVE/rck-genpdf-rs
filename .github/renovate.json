{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "schedule": ["before 2am"],
  "github-actions": {
    "fileMatch": [
      "^(workflow-templates|\\.github\\/workflows)\\/[^/]+\\.ya?ml$",
      "(^|\\/)action\\.ya?ml$"
    ]
  },
  "cargo": {
    "commitMessageTopic": "Rust crate {{depName}}",
    "fileMatch": ["(^|/)Cargo\\.toml$"],
    "versioning": "cargo",
    "rangeStrategy": "bump"
  }
}
